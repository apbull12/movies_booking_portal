<p id="notice"><%= notice %></p>

<h1>All Bookings | Total - <%=@bookings.count %> <a href="/booking/export.csv"><button class="button button2">Export All</button></a></h1>
<h2>Filters: Based on Screening and Show Slots</h2>

<table>
  <thead>
  <tr>
    <th>Screen ID</th>
    <th>Booked Slot</th>
    <th>Booking ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile Number</th>
    <th>Booked Seats</th>
    <th>Amount</th>
    <th>Payment Status</th>
    <th>Date of Booking</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.screening_id %></td>
      <td><%= booking.show_slot.timings %></td>
      <td><%= booking.id %></td>
      <td><%= booking.name %></td>
      <td><%= booking.email %></td>
      <td><%= booking.mobile_number %></td>
      <td><%= booking.booked_seats %></td>
      <td><%= booking.amount %></td>
      <td><%= booking.payment_status %></td>
      <td><%= booking.created_at.to_datetime %></td>
    </tr>
  <% end %>
  </tbody>
</table>
